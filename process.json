{
    "apps": [{
        "name": "app-development",
        "script": "./bin/www.js",
        "exec_mode": "cluster",
        "instances": 0,
        "env": {
          "NODE_ENV": "development",
          "DEBUG": "libreviews:*"
        },
        "min_uptime": "1h",
        "watch": true,
        "ignore_watch": ["static/**", "frontend/**", "rethinkdb_data*", "locales/*.json", ".git"]
    },
    {
        "name": "app-production",
        "script": "./bin/www.js",
        "exec_mode": "cluster",
        "instances": 0,
        "env": {
          "NODE_ENV": "production",
          "DEBUG": "libreviews:*"
        },
        "watch": false,
        "min_uptime": "1m"
    }]
}

<div id="feed">
{{#each feedItems}}
<div id="review-{{this.id}}" class="feed-review">
<div class="feed-review-rating">
{{#times this.starRating}}
{{!per https://www.w3.org/WAI/tutorials/images/groups/ we show ALT text for the first image}}
<img src="/static/img/star-{{../this.starRating}}-full.svg" width="25" class="feed-star"{{#if @first}} alt="{{{__n "one or multiple stars" ../../this.starRating}}}"{{/if}}>
{{/times}}
</div>
<div class="feed-item-header">{{{__ "review of" this.thing.label}}}</div>
{{#if this.thing.urls.[0]}}
<div id="feed-review-url"><span class="fa fa-external-link feed-icon"></span>{{{link this.thing.urls.[0] (prettify this.thing.urls.[0])}}}</div>
{{/if}}
{{#if this.thing.id}}
<div id="feed-thing-link"><span class="fa fa-info-circle feed-icon"></span><a href="/thing/{{this.thing.id}}">{{{__ "more info"}}}</a></div>
{{/if}}
<div class="feed-review-title">{{{this.title}}}</div>
<div id="feed-review-text">
{{{this.html}}}
</div>
<p>
<div class="feed-review-byline">{{{__ "review byline" this.creator.displayName this.createdAt}}}</div>
</div>
{{#unless @last}}
<hr class="feed-separator">
{{/unless}}
{{/each}}
</div>

<p>{{{__ "enter your info" }}}</p>
{{#each errors}}
  <div class="error">{{{this}}}</div>
{{/each}}
<form class="pure-form pure-form-aligned" action="/register" method="post">
<input type="hidden" value="{{csrfToken}}" name="_csrf">
    <fieldset>
        <div class="pure-control-group">
            <label for="username">{{{__ "username"}}}</label>
            <input id="username" name="username" type="text" placeholder="{{{__ "enter username"}}}" size="30">
        </div>

        <div class="pure-control-group">
            <label for="password">{{{__ "password"}}}</label>
            <input id="password" name="password" type="password" placeholder="{{{__ "enter password"}}}" size="30">
        </div>

        <div class="pure-control-group">
            <label for="email">{{{__ "email optional"}}}</label>
            <input id="email" name="email" type="text" placeholder="{{{__ "enter email"}}}" size="30">
        </div>

        <div id="register-terms-notice">{{{__ "agree to terms"}}}</div>
        <button type="submit" class="pure-button pure-button-primary button-rounded">{{{__ "register"}}}</button>
        <p>{{{__ "already got an account" }}}</p>
    </fieldset>
</form>

{
    "apps": [{
        "name": "app-development",
        "script": "./bin/www.js",
        "exec_mode": "cluster",
        "instances": 0,
        "env": {
          "NODE_ENV": "development",
          "DEBUG": "libreviews:*"
        },
        "watch": ["*.js", "*.json5", "process.json"],
        "ignore_watch": ["static/**", "frontend/**"]
    },
    {
        "name": "app-production",
        "script": "./bin/www.js",
        "exec_mode": "cluster",
        "instances": 0,
        "env": {
          "NODE_ENV": "production",
          "DEBUG": "libreviews:*"
        },
        "watch": false
    }]
}
